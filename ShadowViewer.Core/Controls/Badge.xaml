<UserControl VerticalAlignment="Center"
             x:Class="ShadowViewer.Controls.Badge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ShadowViewer.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border 
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="0.5"
        CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Padding="5,2"
                Background="{x:Bind LeftBackground, Mode=OneWay}">
                <TextBlock FontSize="{x:Bind FontSize}"
                    HorizontalAlignment="Center"
                    Foreground="{x:Bind LeftForeground, Mode=OneWay}"
                    Text="{x:Bind LeftTitle, Mode=OneWay}" />
            </Grid>
            <Grid
                Grid.Column="1"
                Padding="5,2"
                Background="{x:Bind RightBackground, Mode=OneWay}">
                <TextBlock
                    HorizontalAlignment="Center" FontSize="{x:Bind FontSize}"
                    Foreground="{x:Bind RightForeground, Mode=OneWay}"
                    Text="{x:Bind RightTitle, Mode=OneWay}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
