<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShadowViewer"
    xmlns:local2="using:ShadowViewer.Controls">

    <Style TargetType="local2:ShadowSettingHeader">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:ShadowSettingHeader">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Header}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{TemplateBinding Description}"
                                Visibility="{TemplateBinding IsShowDescription}" />
                        </StackPanel>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
